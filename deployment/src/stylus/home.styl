.about-container
    border none

.info-container
    padding 50px 0
    &:before
        background-color darken(main-color, 10%)

.hero-container#home-hero-container
	background-image url('https://xmovement.s3.amazonaws.com/assets/c4d/images/headers/c4d-home.svg')
	background-position calc(50% + 300px) center
	background-size 600px
	background-origin content-box
	padding 200px 20px 180px 20px

@media(max-width: $screen-sm-max)
	.hero-container#home-hero-container
		background-image url('https://xmovement.s3.amazonaws.com/assets/c4d/images/headers/c4d-mini-robot.svg')
		background-size 200px
		background-origin border-box
		background-position right 400px
		padding 160px 20px 140px 20px

@media(max-width: $screen-lg-max)
	.hero-container#home-hero-container
		.text-container
			padding 0
			&.text-left h1
				max-width 50%

#home-hero-container
    .text-container
        &.text-left h1
            max-width 560px

.hero-container
    .text-container
        button
            background-color transparent
            border white 2px solid
            color white
            font-size 22px
            animate()
            &:hover
                background-color white
                color main-color

.strapline-container
	background-color #EB703C
	padding 20px
	position relative
	z-index 2
	text-align center
	max-width 600px
	margin -30px calc((100% - 600px) / 2) 0 calc((100% - 600px) / 2)
	@media(max-width: $screen-sm-max)
		margin -30px 20px 0 20px
		max-width calc(100% - 40px)
	h1
		color white
		font-size 22px
		margin 0
		padding 0
		font-weight bold

.about-container
    padding 30px 0 60px 0
	.about-summary-tile
		img
			height 120px

.design-container
	background-color #EB703C
	background-origin border-box
	background-size 60%
	background-position calc(50% + 440px)
	padding 180px 20px
    .text-container.text-left h1
        font-size 36px
		margin 0 !important
		padding 0
        max-width 520px

@media(max-width: $screen-sm-max)
	.design-container
		background-position calc(100% + 40px) calc(100% + 40px)
		padding 50px 20px 300px 20px
		.text-container.text-left
			text-align center
			h1
				margin 0 0 20px 0
				max-width 100%

.featured-ideas-container
	background #45B6F4 !important
	padding 0 0 30px 0
	&:before
		content ''
		background-color darken(#45B6F4, 10%)
		height 30px
		width 100%
		position relative
		z-index 1
		top -15px
		-ms-transform skewY(-0.5deg)
		-webkit-transform skewY(-0.5deg)
		transform skewY(-0.5deg)
	&:after
		content ''
		background-color #45B6F4
		height 30px
		width 100%
		position relative
		z-index 1
		bottom -30px
		-ms-transform skewY(-0.5deg)
		-webkit-transform skewY(-0.5deg)
		transform skewY(-0.5deg)
	h2
		color white
		font-size 36px
		padding-top 0
		font-weight bold
	.idea-tile
		border none
