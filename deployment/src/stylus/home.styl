.about-container
	border none

.info-container
	padding 50px 0
	&:before
		background-color darken(main-color, 10%)

.featured-ideas-container
	background #EB703C !important
	padding 0 0 30px 0
	&:before
		content ''
		background-color #EB703C
		height 30px
		width 100%
		position relative
		z-index 1
		top -15px
		-ms-transform skewY(-0.5deg)
		-webkit-transform skewY(-0.5deg)
		transform skewY(-0.5deg)
	&:after
		content ''
		background-color #EB703C
		height 30px
		width 100%
		position relative
		z-index 1
		bottom -30px
		-ms-transform skewY(-0.5deg)
		-webkit-transform skewY(-0.5deg)
		transform skewY(-0.5deg)
	h2
		color white
		font-size 36px
		font-weight bold
	.idea-tile
		border none

#home-hero-container
	padding 200px 20px 180px 20px
	background-position calc(50% + 300px) !important
	background-size 600px
	background-origin content-box
	.text-container
		&.text-left h1
			max-width 560px

	@media(max-width: 1200px)
		.text-container
			padding 0 10px
			&.text-left h1
				max-width 50%

	@media(max-width: 878px)
		background-size 100%
		background-origin border-box
		padding 170px 20px 450px 20px
		background-position bottom center !important
		.text-container.text-left h1
			max-width 100%

	@media(max-width: 678px)
		padding 170px 20px 350px 20px

.hero-container
	.text-container
		button
			background-color transparent
			border white 2px solid
			color white
			font-size 22px
			animate()
			&:hover
				background-color white
				color main-color
